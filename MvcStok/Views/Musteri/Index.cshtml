
@using MvcStok.Models.Entity;
@model List<TBLMUSTERILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
       <b>Aranacak Müşteri ADI:</b>  @Html.TextBox("p")
        <input type="submit" , value="ara" />
    </p>
   


            }


<table class="table table-bordered">

    <tr>
        <th>Müşteri Id</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Alert</th>

<tbody>
            @foreach (var mstr in Model)
            {
                       <tr>
                           <th>@mstr.MUSTERIID</th>
                           <td>@mstr.MUSTERIAD</td>
                           <td>@mstr.MUSTERISOYAD</td>
                           <td><a href="/Musteri/SIL/@mstr.MUSTERIID" class="btn btn-danger"> SİL </a></td>
                           <td><a href="/Musteri/MusteriGetir/@mstr.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                           <td>  @Html.ActionLink("SİL BUTONU", "SIL", new { id = mstr.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek İstiyormusunuz')" })</td>
                       </tr>


            }
            




        </tbody>


    </tr>


</table>
<a href="/Musteri/YeniMusteri/" class="btn btn-primary">Yeni Müşteri Ekle</a>


