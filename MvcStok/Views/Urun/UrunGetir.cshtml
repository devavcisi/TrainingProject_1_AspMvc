
@model MvcStok.Models.Entity.TBLURUNLER


    @{
        ViewBag.Title = "UrunGetir";
        Layout = "~/Views/Shared/_MainLayout.cshtml";
    }

    @using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post))
    {

        <div class=" form-group">

            <label for="MUSTERIADI">Ürün Id</label>
            @Html.TextBoxFor(m => m.URUNID, new { @class = "form-control" })

            <label for="MUSTERIADI">Ürün Adı</label>
            @Html.TextBoxFor(m => m.URUNAD, new { @class = "form-control" })
            <br />

            <label for="MUSTERIADI">Ürün Markası </label>
            @Html.TextBoxFor(m => m.MARKA, new { @class = "form-control" })

            <label for="MUSTERIADI">Ürün Kategorisi</label>
            @Html.DropDownListFor(m=>m.TBLKATEGORİ.KATEGORIID,(List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })
            @*@Html.TextBoxFor(m => m.URUNKATEGORİ, new { @class = "form-control" })*@

            <label for="MUSTERIADI">Fiyat</label>
            @Html.TextBoxFor(m => m.FIYAT, new { @class = "form-control" })

            <label for="MUSTERIADI">Stok</label>
            @Html.TextBoxFor(m => m.STOK, new { @class = "form-control" })



        </div>
        <br />

        <div>
            <button class="btn btn-warning"> Ürün Güncelle</button>
        </div>


    }
        



