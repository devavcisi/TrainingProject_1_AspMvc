@using MvcStok.Models.Entity
@model List<TBLURUNLER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Id</th>
            <th>Ürün Adı</th>
            <th>Markası</th>
            <th>Kategori</th>
            <th>Fiyat</th>
            <th>Kalan Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <td> @urun.URUNID</td>
                <td> @urun.URUNAD</td>
                <td> @urun.MARKA</td>
                <td> @urun.TBLKATEGORİ.KATEGORIAD</td>
                <td> @urun.FIYAT</td>
                <td> @urun.STOK</td>
                <td><a href="/URUN/SIL/@urun.URUNID " class="btn btn-danger"> SİL </a></td>
                <td><a href="/URUN/UrunGetir/@urun.URUNID" class="btn btn-success">GÜNCELLE</a></td>


            </tr>


        }


    </tbody>






</table>
<a href="/URUN/UrunEkle/" class="btn btn-primary">Yeni Ürün Ekle</a>

<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
   
</script>