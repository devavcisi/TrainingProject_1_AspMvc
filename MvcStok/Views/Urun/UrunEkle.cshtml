@model MvcStok.Models.Entity.TBLURUNLER


@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<form method="post" class="form-group">

    <div>
        <label> Ürün Adı </label>
        <input type="text" class="form-control" name="URUNAD" required="" placeholder="Ürün Adı" />

    </div>
    <br />
    <div>
        <label> Marka </label>
        <input type="text" class="form-control" name="Marka" required="" />

    </div>
    <br />
    <div>
        <label> Ürün Kategori </label>
        @Html.DropDownListFor(m => m.TBLKATEGORİ.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new { @class = "form-control" })

    </div>
    <br />
    <div>
        <label> Fiyat </label>
        <input type="text" class="form-control" name="FIYAT" />

    </div>
    <br />
    <div>
        <label> Stok </label>
        <input type="text" class="form-control" name="STOK" />

    </div>
    <br />
    <div style="margin-top:15px ">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>





</form>

